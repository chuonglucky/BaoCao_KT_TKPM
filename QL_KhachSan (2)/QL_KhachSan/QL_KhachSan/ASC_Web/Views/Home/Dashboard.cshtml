@{
    ViewData["Title"] = "Dashboard";
    Layout = "_SecureLayout";
}

<div class="row">
    <div class="col s12">
        <div class="card-panel teal white-text hoverable dashboard-greeting">
            <h4>Chào mừng trở lại, @User.Identity.Name!</h4>
            <p>Đây là tổng quan nhanh về tình hình khách sạn của bạn hôm nay.</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s12 m6 l3">
        <div class="card hoverable dashboard-card">
            <div class="card-content teal-text text-darken-2">
                <i class="material-icons">event_available</i>
                <span class="card-title">Đặt Phòng Hôm Nay</span>
                @* SỐ LIỆU VÍ DỤ *@
                <p class="dashboard-metric">12</p>
            </div>
            <div class="card-action">
                <a href="@Url.Action("Index", "Bookings")" class="teal-text">Xem Chi Tiết</a>
            </div>
        </div>
    </div>
    <div class="col s12 m6 l3">
        <div class="card hoverable dashboard-card">
            <div class="card-content orange-text text-darken-2">
                <i class="material-icons">meeting_room</i>
                <span class="card-title">Phòng Trống</span>
                @* SỐ LIỆU VÍ DỤ *@
                <p class="dashboard-metric">28</p>
            </div>
            <div class="card-action">
                <a href="@Url.Action("Index", "Rooms", new { status = "available" })" class="orange-text">Xem Phòng</a>
            </div>
        </div>
    </div>
    <div class="col s12 m6 l3">
        <div class="card hoverable dashboard-card">
            <div class="card-content blue-text text-darken-2">
                <i class="material-icons">people_alt</i>
                <span class="card-title">Khách Hiện Tại</span>
                @* SỐ LIỆU VÍ DỤ *@
                <p class="dashboard-metric">53</p>
            </div>
            <div class="card-action">
                <a href="@Url.Action("CurrentGuests", "Guests")" class="blue-text">Xem Danh Sách</a>
            </div>
        </div>
    </div>
    <div class="col s12 m6 l3">
        <div class="card hoverable dashboard-card">
            <div class="card-content red-text text-darken-2">
                <i class="material-icons">notifications_active</i>
                <span class="card-title">Yêu Cầu Mới</span>
                @* SỐ LIỆU VÍ DỤ *@
                <p class="dashboard-metric">5</p>
            </div>
            <div class="card-action">
                <a href="@Url.Action("Index", "Requests")" class="red-text">Xem Yêu Cầu</a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s12 l8">
        <div class="card hoverable section-card">
            <div class="card-content">
                <span class="card-title">Thống Kê Đặt Phòng (7 Ngày Qua)</span>
                <div style="height: 300px; display:flex; align-items:center; justify-content:center; border: 1px dashed #ccc;">
                    <p class="grey-text">[Biểu đồ thống kê sẽ hiển thị ở đây]</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col s12 l4">
        <div class="card hoverable section-card">
            <div class="card-content">
                <span class="card-title">Công Suất Phòng</span>
                <div style="height: 300px; display:flex; align-items:center; justify-content:center; border: 1px dashed #ccc;">
                    <p class="grey-text">[Biểu đồ công suất phòng ở đây]</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col s12 m6">
        <div class="card hoverable section-card">
            <div class="card-content">
                <span class="card-title">Hoạt Động Gần Đây</span>
                <ul class="collection with-header">
                    <li class="collection-header"><h5>Thông báo</h5></li>
                    <li class="collection-item avatar">
                        <i class="material-icons circle green">check_circle</i>
                        <span class="title">Phòng 102 đã được dọn dẹp</span>
                        <p>
                            Nhân viên: Alice <br>
                            <small class="grey-text">10 phút trước</small>
                        </p>
                        <a href="#!" class="secondary-content"><i class="material-icons">more_vert</i></a>
                    </li>
                    <li class="collection-item avatar">
                        <i class="material-icons circle blue">payment</i>
                        <span class="title">Thanh toán mới nhận</span>
                        <p>
                            Đặt phòng #12345 <br>
                            <small class="grey-text">30 phút trước</small>
                        </p>
                        <a href="#!" class="secondary-content"><i class="material-icons">receipt</i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col s12 m6">
        <div class="card hoverable section-card">
            <div class="card-content">
                <span class="card-title">Tác Vụ Nhanh</span>
                <div class="center-align" style="padding-top: 20px;">
                    <a class="btn waves-effect waves-light teal lighten-1" href="@Url.Action("Create", "Bookings")" style="margin: 5px 0;">
                        <i class="material-icons left">add_circle</i>Tạo Đặt Phòng
                    </a>
                    <a class="btn waves-effect waves-light blue lighten-1" href="@Url.Action("Create", "Guests")" style="margin: 5px 0;">
                        <i class="material-icons left">person_add</i>Thêm Khách Mới
                    </a>
                    <a class="btn waves-effect waves-light orange darken-1" href="@Url.Action("Index","Rooms")" style="margin: 5px 0;">
                        <i class="material-icons left">view_list</i>Quản Lý Phòng
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // JavaScript specific to the Dashboard page can go here.
    </script>
}